---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 | Minions Blog" description="Page not found">
  <div class="container mx-auto px-4 py-24 md:py-32 flex flex-col items-center justify-center text-center max-w-2xl min-h-[50vh]">
    <h1 class="text-8xl font-black text-transparent bg-clip-text bg-gradient-to-br from-accent to-purple-800 mb-6 drop-shadow-md">
      404
    </h1>
    <h2 class="text-3xl font-bold text-primary mb-4">
      Page Not Found
    </h2>
    <p class="text-lg text-muted mb-10">
      Oops! It seems the minion responsible for this page got lost. Let's get you back on track.
    </p>
    
    <a 
      href="/" 
      class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-accent hover:bg-accent/90 shadow-lg shadow-accent/20 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background focus:ring-accent"
    >
      Return to Home
    </a>
  </div>
</BaseLayout>
